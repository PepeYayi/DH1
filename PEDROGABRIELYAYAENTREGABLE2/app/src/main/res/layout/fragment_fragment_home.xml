<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.pedrogabrielyaya_entregable2.FragmentHome">

    <RelativeLayout
        android:orientation="vertical"
        android:background="@drawable/fondo1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">







        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S O M O S "
            android:textSize="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_gravity=""
            android:id="@+id/textViewHome1"
            android:textColor="@color/Blanco"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LO QUE"
            android:id="@+id/textViewHome2"
            android:layout_below="@id/textViewHome1"
            android:layout_marginLeft="10dp"
            android:textSize="60dp"
            android:textColor="@color/Blanco"
            android:textStyle="normal"
            android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMEMOS"
            android:layout_below="@id/textViewHome2"
            android:layout_marginLeft="10dp"
            android:id="@+id/textViewHome3"
            android:textSize="65dp"
            android:textColor="@color/Blanco"
            android:textStyle="normal"
            android:fontFamily="sans-serif-condensed"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/textViewHome3"
            android:src="@drawable/heart"/>





    </RelativeLayout>


</FrameLayout>
