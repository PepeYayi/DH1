<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dh.agregaroquitarcontactospedro.FragmentEditar">


    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:id="@+id/imagenEditar"
        android:layout_height="wrap_content"
        android:src="@drawable/peladobig"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:hint="NOMBRE"
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/editTextNombreFragmentEditar"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:hint="DESCRIPCION"
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/editTextDescripcionFragmentEditar"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="PELADO"
            android:layout_weight="1"
            android:id="@+id/checkBoxPelado"
            android:textSize="20sp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RULO"
            android:layout_weight="1"
            android:id="@+id/checkBoxRulo"
            android:textSize="20sp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FACHA"
            android:layout_weight="1"
            android:id="@+id/checkBoxFacha"
            android:textSize="20sp"/>






    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"  >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/botonAceptar"
            android:text="ACEPTAR"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/botonCancelar"
            android:text="CANCELAR"/>


    </LinearLayout>


</LinearLayout>
